{
  "name": "threatdragon",
  "productName": "OWASP-Threat-Dragon",
  "version": "1.2.0",
  "description": "OWASP Threat Dragon desktop version",
  "main": "main.js",
  "scripts": {
    "start": "./node_modules/.bin/electron .",
    "build": "npm run-script pretest && npm run-script build-content && npm run-script builder",
    "build-content": "npm run-script copy-fonts && npm run-script bundle-minify-css",
    "builder": "electron-builder build --macos --win --linux --publish always --config electron-builder.json",
    "copy-fonts": "./node_modules/.bin/copyfiles -f ./node_modules/font-awesome/fonts/*.* ./node_modules/bootstrap/dist/fonts/*.* ./fonts",
    "bundle-css": "./node_modules/.bin/rework-npm ./content/app.css -o ./content/threatdragon.css",
    "minify-css": "./node_modules/.bin/uglifycss ./content/threatdragon.css > ./content/threatdragon.min.css",
    "bundle-minify-css": "npm run-script bundle-css && npm run-script minify-css",
    "pretest": "node ./node_modules/jshint/bin/jshint --verbose --show-non-errors app",
    "test": "./node_modules/.bin/karma start --single-run --browsers Electron",
    "citest": "./node_modules/.bin/karma start --single-run false --browsers Electron",
    "codecov": "./node_modules/.bin/codecov",
    "build-all": "npm run-script build-win && npm run-script build-osx && npm run-script build-lin",
    "build-win": "npm run-script package-win && npm run-script installer-win",
    "build-osx": "npm run-script package-osx && npm run-script installer-osx",
    "build-lin": "npm run-script package-lin && npm run-script installer-lin",
    "installer-win": "node ./installer-win.js",
    "installer-osx": "node ./installer-osx.js",
    "installer-lin": "node -e 'require(\"./installer-lin\").all()'",
    "package-osx": "./node_modules/.bin/electron-packager . --asar --overwrite  --out=./build --ignore=\"installers|tests|.vscode|coverage\" --platform=darwin --arch=x64 --prune=true --icon=content/icons/icon.icns",
    "package-lin": "./node_modules/.bin/electron-packager . --asar --overwrite  --out=./build --ignore=\"installers|tests|.vscode|coverage\" --platform=linux --arch=x64 --prune=true --icon=content/icons/png/256x256.png --executableName=threatdragon",
    "package-win": "./node_modules/.bin/electron-packager . --asar --overwrite  --out=./build --ignore=\"installers|tests|.vscode|coverage\" --platform=win32 --arch=x64 --prune=true --icon=content/icons/icon.ico --win32metadata.CompanyName=OWASP --win32metadata.FileDescription=\"OWASP Threat Dragon\" --win32metadata.ProductName=\"OWASP Threat Dragon\"",
    "snyk-protect": "snyk protect",
    "prepare": "npm run-script snyk-protect"
  },
  "author": {
    "name": "mike.goodwin",
    "email": "mike.goodwin@owasp.org"
  },
  "license": "Apache-2.0",
  "homepage": "http://docs.threatdragon.org/",
  "repository": {
    "type": "git",
    "url": "git://github.com/mike-goodwin/owasp-threat-dragon-desktop.git"
  },
  "dependencies": {
    "angular": "1.7.9",
    "angular-animate": "1.7.8",
    "angular-route": "1.7.8",
    "angular-ui-bootstrap": "2.5.6",
    "angular-xeditable": "0.9.0",
    "any-promise": "1.3.0",
    "bootstrap": "3.4.1",
    "electron-squirrel-startup": "1.0.0",
    "font-awesome": "4.7.0",
    "jquery": "3.5.0",
    "lodash": "4.17.20",
    "owasp-threat-dragon-core": "1.2.0",
    "promise-fs": "2.1.0",
    "snyk": "^1.295.0"
  },
  "devDependencies": {
    "angular-mocks": "1.7.8",
    "browserify": "14.5.0",
    "browserify-css": "0.14.0",
    "browserify-istanbul": "3.0.1",
    "browserify-ng-html2js": "1.3.0",
    "codecov": "3.6.5",
    "copyfiles": "1.2.0",
    "electron": "5.0.5",
    "electron-builder": "^22.4.1",
    "electron-debug": "3.0.0",
    "electron-installer-dmg": "^3.0.0",
    "electron-packager": "13.1.1",
    "electron-winstaller": "3.0.4",
    "eslint": "^5.4.0",
    "istanbul": "0.4.5",
    "jasmine": "2.8.0",
    "jasmine-core": "2.8.0",
    "jasmine-jquery": "2.1.1",
    "jasmine-node": "1.14.5",
    "jasmine-spec-reporter": "4.2.1",
    "jshint": "2.9.5",
    "karma": "1.7.1",
    "karma-browserify": "5.1.2",
    "karma-coverage": "1.1.1",
    "karma-electron": "6.1.1",
    "karma-jasmine": "1.1.1",
    "karma-ng-html2js-preprocessor": "1.0.0",
    "karma-spec-reporter": "0.0.31",
    "karma-threshold-reporter": "^0.1.15",
    "karma-xml-reporter": "0.1.4",
    "requirejs": "2.3.5",
    "rework-npm-cli": "0.1.3",
    "uglifycss": "0.0.27",
    "watchify": "3.9.0"
  },
  "optionalDependencies": {
    "electron-installer-redhat": "~2.0.0",
    "electron-installer-debian": "~2.0.0",
    "electron-installer-snap": "~4.0.0"
  },
  "snyk": true
}
